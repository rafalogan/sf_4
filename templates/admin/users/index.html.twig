{% extends 'admin/admin.html.twig' %}

{% block title %}Hello {{ controller_name }}!{% endblock %}

{% block body %}
    {% include '/includes/messages.html.twig' %}

    <h1> Admim Menus </h1>
    <a href="{{ path('admin_user_novo') }}">Novo Usu√°rio</a>
    <hr>
    <table>
        <thead>
        <tr>
            <th>Matricula</th>
            <th>Titulo</th>
            <th>Criado em</th>
            <th>Editar</th>
            <th>Deletar</th>
        </tr>
        </thead>
        <tbody>
        {% for menu in menus %}
            <tr>
                <td>{{ menu.menuId }}</td>
