                <td>{{ menu.menuCreatedAt | date('d/M/Y H:i:s') }}</td>
                <td><a href="{{ path('admin_user_edit', {'menu_id': menu.menuId }) }}">Editar</a></td>
                <td><a href="{{ path('admin_user_delet',{'menu_id': menu.menuId }) }}">Deletar</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
